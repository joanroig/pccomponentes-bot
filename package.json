{
  "name": "pccomponentes-bot",
  "version": "3.0.0",
  "author": "Joan Roig",
  "license": "MIT",
  "description": "Bot for PcComponentes, it sends Telegram messages and can do automatic purchases. Useful for tracking graphics cards, processors, etc.",
  "main": "app.ts",
  "scripts": {
    "start": "node src/app.js",
    "start-ts": "ts-node src/app.ts",
    "dev": "nodemon src/app.ts",
    "build-prod": "rimraf dist && yarn tsc && yarn minify-all-js dist && yarn generate-prod-env && yarn copy-prod-files",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.ts",
    "format": "eslint --fix . --ext .js,.ts",
    "format:staged": "lint-staged",
    "generate-prod-env": "echo BOT_TOKEN= > ./dist/.env && echo CHAT_ID= >> ./dist/.env && echo PCC_USER= >> ./dist/.env && echo PCC_PASS= >> ./dist/.env",
    "copy-prod-files": "shx cp package.json ./dist/ && shx cp README.md ./dist/ ",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/bezier-js": "^4.1.0",
    "@types/node": "^17.0.5",
    "@types/node-fetch": "^3.0.3",
    "@types/sanitize-html": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "request": "^2.88.2",
    "shx": "^0.3.3"
  },
  "dependencies": {
    "@types/validator": "^13.7.1",
    "ajv": "^8.8.2",
    "axios": "^0.24.0",
    "chalk": "^4.1.2",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.13.2",
    "dotenv": "^10.0.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "ghost-cursor": "^1.1.8",
    "html2json": "^1.0.2",
    "minify-all-js": "^0.1.8",
    "node-fetch": "^3.1.0",
    "out-url": "^1.1.3",
    "puppeteer": "^13.0.1",
    "puppeteer-extra": "^3.2.3",
    "puppeteer-extra-plugin-adblocker": "^2.12.0",
    "puppeteer-extra-plugin-stealth": "^2.9.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.1",
    "sanitize-html": "^2.6.1",
    "telegraf": "^4.5.2",
    "ts-node": "^10.4.0",
    "typedi": "^0.10.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --cache --fix"
  }
}
