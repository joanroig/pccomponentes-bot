{
  "name": "pccomponentes-bot",
  "version": "3.1.0",
  "author": "Joan Roig",
  "license": "MIT",
  "description": "Bot for PcComponentes, it sends Telegram messages and can do automatic purchases. Useful for tracking graphics cards, processors, etc.",
  "main": "app.ts",
  "scripts": {
    "start": "ts-node src/app.ts",
    "dev": "nodemon src/app.ts",
    "build-prod": "rimraf dist && yarn tsc && yarn minify-all-js dist && yarn generate-prod-env && yarn copy-prod-files",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .js,.ts",
    "format": "eslint --fix . --ext .js,.ts",
    "format:staged": "lint-staged",
    "generate-prod-env": "echo BOT_TOKEN= > ./dist/.env && echo CHAT_ID= >> ./dist/.env && echo PCC_USER= >> ./dist/.env && echo PCC_PASS= >> ./dist/.env",
    "copy-prod-files": "shx cp package.json ./dist/ && shx cp README.md ./dist/ ",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@types/bezier-js": "^4.1.0",
    "@types/node": "^18.13.0",
    "@types/node-fetch": "^3.0.3",
    "@types/sanitize-html": "^2.8.0",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.1",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "request": "^2.88.2",
    "shx": "^0.3.4"
  },
  "dependencies": {
    "@types/validator": "^13.7.12",
    "ajv": "^8.12.0",
    "axios": "^1.3.2",
    "chalk": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-transformer-validator": "^0.9.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.0.3",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "ghost-cursor": "^1.1.16",
    "html2json": "^1.0.2",
    "minify-all-js": "^0.1.9",
    "node-fetch": "^3.3.0",
    "out-url": "^1.1.3",
    "puppeteer": "^19.6.3",
    "puppeteer-extra": "^3.3.4",
    "puppeteer-extra-plugin-adblocker": "^2.13.5",
    "puppeteer-extra-plugin-stealth": "^2.11.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "sanitize-html": "^2.9.0",
    "telegraf": "^4.11.2",
    "ts-node": "^10.9.1",
    "typedi": "^0.10.0",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0",
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": "eslint --cache --fix"
  }
}
